<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MangaReader.Login"
             BackgroundColor="#CCFFFF">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     VerticalOptions="CenterAndExpand"
                     Margin="40,50"
                     Spacing="10">
            <Image Source="https://camo.githubusercontent."
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HeightRequest="180"
                   WidthRequest="180"
                />

            <Frame CornerRadius="5">
                <StackLayout>
                    <Entry Placeholder="Username" TextColor="Black"
                   PlaceholderColor="Gray"
                           ReturnType="Next"
                           Keyboard="Email"
                           x:Name="txtusername"/>
                </StackLayout>
            </Frame>

            <Frame CornerRadius="5">
                <StackLayout>
                    <Entry Placeholder="Password" TextColor="Black"
                   PlaceholderColor="Gray" IsPassword="True"
                           Keyboard="Chat"
                           x:Name="txtpassword"/>
                </StackLayout>
            </Frame>

            <Button x:Name="btlogin"
                    Text="Loggin"
                    BackgroundColor="Blue"
                    TextColor="White"
                    CornerRadius="50"
                    BorderWidth="1.5"
                    Clicked="btlogin_Clicked"/>
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Don't have an account? "
                              TextColor="Black"/>
                        <Span Text="Register"
                              TextColor="Black"
                              TextDecorations="Underline"
                              FontAttributes="Bold"/>
                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer x:Name="btsignup" Tapped="btsignup_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>